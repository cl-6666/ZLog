<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/background_color">

    <!-- 标题栏 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/header_background"
        android:orientation="horizontal"
        android:padding="16dp"
        android:gravity="center_vertical">

        <Button
            android:id="@+id/btn_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="← 返回"
            android:textColor="@android:color/white"
            android:background="@android:color/transparent"
            android:textSize="16sp"
            android:padding="8dp" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="文件日志演示"
            android:textColor="@android:color/white"
            android:textSize="20sp"
            android:textStyle="bold"
            android:gravity="center" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="v2.0"
            android:textColor="@android:color/white"
            android:textSize="12sp"
            android:background="@drawable/version_badge"
            android:padding="4dp" />

    </LinearLayout>

    <!-- 功能按钮区域 -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- 写入日志按钮组 -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="📝 写入日志到文件"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="@color/text_primary"
                android:layout_marginBottom="12dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="8dp">

                <Button
                    android:id="@+id/btn_write_basic_log"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="基本日志"
                    android:textColor="@android:color/white"
                    android:background="@drawable/button_primary"
                    android:layout_marginEnd="4dp" />

                <Button
                    android:id="@+id/btn_write_formatted_log"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="格式化日志"
                    android:textColor="@android:color/white"
                    android:background="@drawable/button_success"
                    android:layout_marginStart="4dp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="8dp">

                <Button
                    android:id="@+id/btn_write_json_log"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="JSON日志"
                    android:textColor="@android:color/white"
                    android:background="@drawable/button_info"
                    android:layout_marginEnd="4dp" />

                <Button
                    android:id="@+id/btn_write_xml_log"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="XML日志"
                    android:textColor="@android:color/white"
                    android:background="@drawable/button_warning"
                    android:layout_marginStart="4dp" />

            </LinearLayout>

            <Button
                android:id="@+id/btn_write_exception_log"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="异常日志"
                android:textColor="@android:color/white"
                android:background="@drawable/button_danger"
                android:layout_marginBottom="16dp" />

            <!-- 文件操作按钮组 -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="📁 文件操作"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="@color/text_primary"
                android:layout_marginBottom="12dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="16dp">

                <Button
                    android:id="@+id/btn_read_log_file"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="读取日志文件"
                    android:textColor="@android:color/white"
                    android:background="@drawable/button_secondary"
                    android:layout_marginEnd="4dp" />

                <Button
                    android:id="@+id/btn_clear_log_file"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="清空日志文件"
                    android:textColor="@android:color/white"
                    android:background="@drawable/button_danger"
                    android:layout_marginStart="4dp" />

            </LinearLayout>

            <!-- 日志文件内容显示区域 -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="📄 日志文件内容"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="@color/text_primary"
                android:layout_marginBottom="12dp" />

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="300dp"
                android:background="@drawable/log_output_background">

                <TextView
                    android:id="@+id/log_file_content"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="点击读取日志文件按钮查看文件内容..."
                    android:textColor="@color/text_secondary"
                    android:textSize="12sp"
                    android:fontFamily="monospace"
                    android:padding="12dp"
                    android:textIsSelectable="true" />

            </ScrollView>

            <!-- 提示信息 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/tip_background"
                android:padding="12dp"
                android:layout_marginTop="16dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="💡"
                    android:textSize="16sp"
                    android:layout_marginEnd="8dp" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="文件日志功能演示:\n• 支持多种日志级别写入文件\n• 自定义格式化器和扁平化器\n• 文件大小备份和清理策略\n• 日志文件位置: /Android/data/com.cl.test/files/demo_logs/"
                    android:textColor="@color/text_secondary"
                    android:textSize="12sp"
                    android:lineSpacingExtra="2dp" />

            </LinearLayout>

        </LinearLayout>

    </ScrollView>

</LinearLayout>